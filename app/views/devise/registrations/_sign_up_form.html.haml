= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "general-form"}) do |f|
  = devise_error_messages!
  .form-group.mb-30
    = f.hidden_field(:role_id, value: Role.first.id)
    %label.control-label.font-weight-light{for: "login"}= t('login')
    = f.text_field :login, autofocus: true, placeholder: t('login'), id: "login", class: "form-control"
    %label.control-label.font-weight-light{for: "password"}= t('password')
    = f.password_field :password, autocomplete: "off", placeholder: t('password'), id: "password", class: "form-control"
    %label.control-label.font-weight-light{for: "confirm"}= t('confirm_password')
    = f.password_field :password_confirmation, autocomplete: "off", placeholder: t('confirm_password'), id: "confirm", class: "form-control"
    %label.control-label.font-weight-light{for: "email"}= t('email')
    = f.email_field :email, autofocus: true, placeholder: t('email'), id: "email", class: "form-control"
    %label.control-label.font-weight-light{for: "full_name"}= t('full_name')
    = f.text_field :full_name, autofocus: true, placeholder: t('full_name'), id: "full_name", class: "form-control"
    %label.control-label.font-weight-light{for: "birthday"}= t('birthday')
    = f.date_field :birthday, autofocus: true, placeholder: t('birthday'), id: "birthday", class: "form-control"
    = render partial: 'address_form', locals: { f: f }
    
  .text-center
    = f.button t('sign_up'), class: "btn btn-default mb-20"