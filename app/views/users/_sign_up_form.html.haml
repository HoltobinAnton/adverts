= form_for User.new ,url: wizard_path, :html => {:class => "general-form"} do |f|
  .form-group.mb-30
    = f.hidden_field(:role_id, value: Role.first.id)
    %label.control-label.font-weight-light{for: "login"}= t('login')
    = f.text_field :login, autofocus: true, placeholder: 'login', id: "login", class: "form-control"
    %label.control-label.font-weight-light{for: "password"}= t('password')
    = f.password_field :password, autocomplete: "off", placeholder: 'password', id: "password", class: "form-control"
    %label.control-label.font-weight-light{for: "confirm"}= t('confirm_password')
    = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'confirm password', id: "confirm", class: "form-control"
    %label.control-label.font-weight-light{for: "email"}= t('email')
    = f.email_field :email, autofocus: true, placeholder: 'email', id: "email", class: "form-control"
    %label.control-label.font-weight-light{for: "full_name"}= t('full_name')
    = f.text_field :full_name, autofocus: true, placeholder: 'full_name', id: "full_name", class: "form-control"
    %label.control-label.font-weight-light{for: "birthday"}= t('birthday')
    = f.date_field :birthday, autofocus: true, placeholder: 'birthday', id: "birthday", class: "form-control"
    
  .text-center
    = f.submit 'Next step', class: 'center-block mb-20 btn btn-default'
